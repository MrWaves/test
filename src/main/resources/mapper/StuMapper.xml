<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.test.java.StuDao">
	<resultMap id="BaseResultMap" type="com.example.test.java.StuDTO">
		<id column="id" property="id"/>
		<result column="name" property="name" />
		<result column="created_at" property="createdAt" />
	</resultMap>

	<parameterMap id="StuDTO" type="com.example.test.java.StuDTO"/>

	<sql id="Base_Column_List">
		id,name,created_at
	</sql>

	<select id="findStuByCreatedTime" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from stu
		<where>
			<if test="date != null">
				AND created_at &lt;= #{date}
			</if>
		</where>
	</select>

	<insert id="insert" parameterType="com.example.test.java.StuDTO" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO stu(name)
		VALUES
		(#{name})
	</insert>

</mapper>
